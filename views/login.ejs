<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <h1 class="text-center mb-3">
            <i class="fas fa-sign-in-alt"></i> Login
        </h1>
        <%- include ("./partials/messages"); %>
        <form action="/auth/login" method="POST">
            <div class="form-group" style="margin-bottom: 10px">
                <label for="email" style="font-size: larger">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email"
                    autocomplete="off"
                />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label for="password" style="font-size: larger">Password</label>
                <div class="input-group">
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        placeholder="Enter Password"
                    />
                    <div class="input-group-append" style="margin-left: 5px">
                        <span class="input-group-text">
                            <i class="fas fa-eye-slash" id="togglePassword"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <a
                    href="/auth/forgot-password"
                    style="font-weight: bolder; text-decoration: none"
                    >Forgot Password?</a
                >
            </div>
            <button
                type="submit"
                class="btn btn-primary btn-block w-100"
                style="font-size: large"
            >
                Login
            </button>
        </form>
        <div class="mt-4">
            <hr />
            <p class="text-center" style="font-weight: bold">
                Or continue with:
            </p>
            <div class="d-flex justify-content-center">
                <a href="/auth/google" class="btn btn-danger">
                    <i class="fab fa-google mr-2"></i> Google
                </a>
            </div>
        </div>
        <div class="text-center">
            <!-- New div to center the last <p> -->
            <p class="lead mt-4">
                You don't have an account?
                <a
                    href="/auth/register"
                    style="font-weight: bolder; text-decoration: none"
                    >Register</a
                >
            </p>
        </div>
    </div>
</div>

<style>
    label {
        font-weight: 500;
    }

    .input-group-text {
        height: 100%;
    }

    .input-group-text:hover {
        cursor: pointer;
    }

    .input-group-append:hover,
    .input-group-append:hover > .input-group-text {
        background-color: #f8f9fa;
    }
</style>

<script>
    const togglePassword = document.querySelector("#togglePassword");
    const password = document.querySelector("#password");

    togglePassword.addEventListener("click", function () {
        const type =
            password.getAttribute("type") === "password" ? "text" : "password";
        password.setAttribute("type", type);
        togglePassword.classList.toggle("fa-eye");
        togglePassword.classList.toggle("fa-eye-slash");
    });
</script>
