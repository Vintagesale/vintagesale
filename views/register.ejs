<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <h1 class="text-center mb-3">
            <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include ("./partials/messages") %>
        <form action="/auth/register" method="POST">
            <div class="form-group" style="margin-bottom: 10px">
                <label for="name" style="font-size: larger">First Name</label>
                <input
                    type="name"
                    id="firstName"
                    name="firstName"
                    class="form-control"
                    placeholder="Enter First Name"
                    autocomplete="off"
                    value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
                />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label for="name" style="font-size: larger">Last Name</label>
                <input
                    type="name"
                    id="lastName"
                    name="lastName"
                    class="form-control"
                    placeholder="Enter Last Name"
                    autocomplete="off"
                    value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
                />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label for="email" style="font-size: larger">Email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email"
                    autocomplete="off"
                    value="<%= typeof email != 'undefined' ? email : '' %>"
                />
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label for="password" style="font-size: larger">Password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Create Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>"
                />
            </div>
            <div class="form-group" style="margin-bottom: 20px">
                <label for="password2" style="font-size: larger"
                    >Confirm Password</label
                >
                <input
                    type="password"
                    id="passwordRepeated"
                    name="passwordRepeated"
                    class="form-control"
                    placeholder="Confirm Password"
                    value="<%= typeof passwordRepeated != 'undefined' ? passwordRepeated : '' %>"
                />
            </div>
            <button
                type="submit"
                class="btn btn-primary btn-block w-100"
                style="font-size: large"
            >
                Register
            </button>
        </form>
        <div class="text-center">
            <!-- New div to center the last <p> -->
            <p class="lead mt-4">
                You already have an account?
                <a
                    href="/auth/login"
                    style="font-weight: bolder; text-decoration: none"
                >
                    Login
                </a>
            </p>
        </div>
    </div>
</div>

<style>
    label {
        font-weight: 500;
    }
</style>
